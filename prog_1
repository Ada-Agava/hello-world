import re
a = input()
digits = []
letters = []
sokr = ['тыс', 'млн', 'млрд', 'трлн'] #это не весь список чисел, его заполню ещё числами побольше
more = ['тысяча', 'тысячи', 'тысяч', 'миллион', 'миллионов', 'миллиона', 'миллиард', 'миллиарда', 'миллиардов', 'триллион', 'триллиона', 'триллионов']
if len(a) >30:
    print('Лимит символов превышен')
else:
    try:
        float(a)
        print('Это число')
    except ValueError:   #тут пошла проверка 16-ричных чисел
        lis = re.findall(r'[0-9A-F]', a)
        if len(lis)!=0:
            print('Это число')  #и тут надо закончить выполнение программы (а оно и закончится)
        else:  #тут пошла проверка смешанных чисел
            b = a.split()  #может, попоробовать причислить к действ.члены массива?
            for x in b:
                try:
                    float(x)
                    digits.append(x)
                except ValueError:
                    letters.append(x)
            for x in letters:  #тут пошла проверка буквенных чисел сравниванием с членами созданных массивов
                if len(digits)!=0: #если у нас смешанное число, то буквенные части могут быть только из списков sokr & more
                    for z in sokr:
                        for y in more:
                        if  x != z and x != y:
                            print ('Это не число')
                            #этап проверки смешанных чисел закончился, дальше идёт этап проверки только буквенных чисел
                        
